{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* shadcn/ui alignment */
    "baseUrl": ".",
    "paths": {
      "@helpers/*": [
        "src/@helpers/*"
      ],
      "@patterns/*": [
        "src/@patterns/*"
      ],
      "@ui/*": [
        "src/@ui/*"
      ],
      "@src/*": [
        "src/*"
      ],
    },
    /* Library-specific settings */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "preview"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}